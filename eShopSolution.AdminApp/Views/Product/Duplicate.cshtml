@model eShopSolution.ViewModels.Catalog.Products.ProductViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    ViewData["Title"] = "Nhân bản sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Nhân bản sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="color: #0779e4;" href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xác nhận nhân bản sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                </dl>
                <tr>
                            <td class="font-weight-bold">
                                Tên sản phẩm
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Danh mục
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Category.Name)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Giá tiền
                            </td>
                            <td>
                                @Model.Price.ToString("N0") <span>&#8363;</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Số lượng
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Stock)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Thông số kỹ thuật
                            </td>
                            <td>
                                @{
                                    string html = @Model.Description;
                                    string removeFirstFigure = html.Remove(0, 22);
                                    string removeLastFigure = removeFirstFigure.Remove(removeFirstFigure.Length - 9);
                                    string addedTableFormat = removeLastFigure.Insert(6, " class=\"table table-bordered table-striped\"");
                                }
                                @Html.Raw(addedTableFormat)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Chi tiết sản phẩm
                            </td>
                            <td>
                                <style>
                                    #more {
                                        display: none;
                                    }
                                </style>
                                @Html.Raw(Model.Details)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Ảnh đại diện
                            </td>
                            <td>
                                <img style="width:150px;height:150px" src="@(Configuration["BaseAddress"] + Model.ThumbnailImage)" alt="Alternate Text" />
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Ảnh đầy đủ
                            </td>
                            <td>
                                <img style="width:250px;height:250px" src="@(Configuration["BaseAddress"] + Model.ProductImage)" alt="Alternate Text" />
                            </td>
                        </tr>

                <form asp-action="Duplicate" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input type="submit" value="Nhân bản" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>